
# Poudriere can optionally use ZFS for its ports/jail storage. For
# ZFS define ZPOOL, otherwise set NO_ZFS=yes
#
#### ZFS
# The pool where poudriere will create all the filesystems it needs
# poudriere will use tank/${ZROOTFS} as its root
#
# You need at least 7GB of free space in this pool to have a working
# poudriere.
#
#ZPOOL=
<% if @zpool and @zpool!='' -%>
ZPOOL=<%= @zpool %>
<% end -%>

### NO ZFS
# To not use ZFS, define NO_ZFS=yes
#NO_ZFS=yes
<% if !@zpool or @zpool=='' -%>
NO_ZFS=yes
<% end -%>

# root of the poudriere zfs filesystem, by default /poudriere
#ZROOTFS=
<% if @zpool and @zpool!='' -%>
ZROOTFS=<%= @zrootfs %>
<% end -%>

# the host where to download sets  for the jails setup
# You can specify here a host or an IP
# replace _PROTO_ by http or ftp
# replace _CHANGE_THIS_ by the hostname of the mirrors where you want to fetch
# by default: ftp://ftp.freebsd.org
#
# Also not that every protocols supported by fetch(1) are supported here, even
# file:///
FREEBSD_HOST=<%= @freebsd_host %>

# By default the jails have no /etc/resolv.conf, you will need to set
# REVOLV_CONF to a file on your hosts system that will be copied has
# /etc/resolv.conf for the jail, except if you don't need it (using an http
# proxy for example)
RESOLV_CONF=<%= @resolv_conf %>

# The directory where poudriere will store jails and ports
BASEFS=<%= @poudriere_base %>

# The directory where the jail will store the packages and logs
# by default a zfs filesystem will be created and set to
# ${BASEFS}/data
#
POUDRIERE_DATA=<%= @poudriere_data %>

# Use portlint to check ports sanity
USE_PORTLINT=<%= @use_portlint %>

# When building packages, a memory device can be used to speedup the build.
# Only one of MFSSIZE or USE_TMPFS is supported. TMPFS is generally faster
# and will expand to the needed amount of RAM. MFS is a bit slower, but is
# more mature and can have its memory usage capped.

# If set WRKDIRPREFIX will be mdmfs of the given size (mM or gG)
#MFSSIZE=4G
<% if @mfssize and @mfssize != '' -%>
MFSSIZE=<%= @mfssize %>
<% end -%>

# Use tmpfs(5)
# This can be a space-separated list of options:
# wrkdir    - Use tmpfs(5) for port building WRKDIRPREFIX
# data      - Use tmpfs(5) for poudriere cache/temp build data
# localbase - Use tmpfs(5) for LOCALBASE (installing ports for packaging/testing)
# all       - Run the entire build in memory, including builder jails.
# yes       - Only enables tmpfs(5) for wrkdir
# EXAMPLE: USE_TMPFS="wrkdir data"
<% if @tmpfs and @tmpfs != '' -%>
USE_TMPFS=<%= @tmpfs %>
<% end -%>

# How much memory to limit tmpfs size to for *each builder* in GiB
# (default: none)
<% if @tmpfs_limit and @tmpfs_limit != '' -%>
TMPFS_LIMIT=<%= @tmpfs_limit %>
<% end -%>

# How much memory to limit jail processes to for *each builder*
# in GiB (default: none)
<% if @max_mem and @max_mem != '' -%>
MAX_MEMORY=<%= @max_mem %>
<% end -%>

# If set the given directory will be used for the distfiles this allow the share
# the distfiles between jails and ports tree
DISTFILES_CACHE=<%= @distfiles_cache %>

# if set the ports tree marked to use csup method will use the defined mirror
#CSUP_HOST=cvsup._CHANGE_THIS_.freebsd.org
<% if @csup_host and @csup_host != '' -%>
CSUP_HOST=<%= @csup_host %>
<% end -%>

# if set the ports tree or source tree marked to use svn will use the defined
# mirror by default svn.FreeBSD.org
#SVN_HOST=svn.FreeBSD.org
<% if @svn_host and @svn_host != '' -%>
SVN_HOST=<%= @svn_host %>
<% end -%>

# Automatic OPTION change detection
# When bulk building packages, compare the options from kept packages to
# the current options to be built. If they differ, the existing package
# will be deleted and the port will be rebuilt.
# Valid options: yes, no, verbose
# verbose will display the old and new options
CHECK_CHANGED_OPTIONS=<%= @check_changed_options %>

# Automatic Dependency change detection
# When bulk building packages, compare the dependencies from kept packages to
# the current dependencies for every port. If they differ, the existing package
# will be deleted and the port will be rebuilt. This helps catch changes such
# as DEFAULT_RUBY_VERSION, PERL_VERSION, WITHOUT_X11 that change dependencies
# for many ports.
# Valid options: yes, no
CHECK_CHANGED_DEPS=<%= @check_changed_deps %>

# Path to the RSA key to sign the PKGNG repo with. See pkg-repo(8)
#PKG_REPO_SIGNING_KEY=/etc/ssl/keys/repo.key
<% if @pkg_repo_signing_key and @pkg_repo_signing_key != '' -%>
PKG_REPO_SIGNING_KEY=<%= @pkg_repo_signing_key %>
<% end -%>

# ccache support. Supply the path to your ccache cache directory.
# It will be mounted into the jail and be shared among all jails.
#CCACHE_DIR=/var/cache/ccache
#

# parallel build support.
#
# By default poudriere uses hw.ncpu to determine the number of builders.
# You can override this default by changing PARALLEL_JOBS here, or
# by specifying the -J flag to bulk/testport.
#
# Example to define PARALLEL_JOBS to one single job
PARALLEL_JOBS=<%= @parallel_jobs %>

# How many jobs should be used for preparing the build? These tend to
# be more IO bound and may be worth tweaking. Default: Same as PARALLEL_JOBS
<% if @prep_par_jobs and @prep_par_jobs != '' -%>
PREPARE_PARALLEL_JOBS=<%= @prep_par_jobs %>
<% end -%>

# If set, failed builds will save the WRKDIR to ${POUDRIERE_DATA}/wrkdirs
# SAVE_WRKDIR=yes
<% if @save_wrkdir and @save_wrkdir != '' -%>
SAVE_WRKDIR=<% @save_wkrdir %>
<% end -%>

# Choose the default format for the workdir packing: could be tar,tgz,tbz,txz
# default is tbz
# WRKDIR_ARCHIVE_FORMAT=tbz
<% if @wrkdir_archive_format and @wrkdir_archive_format != '' -%>
WRKDIR_ARCHIVE_FORMAT=<%= @wrkdir_archive_format %>
<% end -%>

# Disable linux support
# NOLINUX=yes
<% if @nolinux and @nolinux != '' -%>
NOLINUX=<%= @nolinux %>
<% end -%>

# By default poudriere sets FORCE_PACKAGE
# To disable it (useful when building public packages):
<% if @no_force_pkg and @no_force_pkg != '' -%>
NO_FORCE_PACKAGE=<%= @no_force_pkg %>
<% end -%>

# by default poudriere set PACKAGE_BUILDING
# to disable it:
# NO_PACKAGE_BUILDING=yes
<% if @no_package_building and @no_package_building != '' -%>
NO_PACKAGE_BUILDING=<%= @no_package_building %>
<% end -%>

# If you are using a proxy define it here:
# export HTTP_PROXY=bla
# export FTP_PROXY=bla
#
<% if @http_proxy and @http_proxy!='' -%>
export HTTP_PROXY=<%= @http_proxy %>
<% end -%>

<% if @ftp_proxy and @ftp_proxy!='' -%>
export FTP_PROXY=<%= @ftp_proxy %>
<% end -%>

# Cleanout the restricted packages
# NO_RESTRICTED=yes
<% if @no_restricted and @no_restricted != '' -%>
NO_RESTRICTED=<%= @no_restricted %>
<% end -%>

# By default MAKE_JOBS is disabled to allow only one process per cpu
# Use the following to allow it anyway
# ALLOW_MAKE_JOBS=yes
<% if @allow_make_jobs and @allow_make_jobs != '' -%>
ALLOW_MAKE_JOBS=<%= @allow_make_jobs %>
<% end -%>

# List of packages that will always be allowed to use MAKE_JOBS
# regardless of ALLOW_MAKE_JOBS. This is useful for allowing ports
# which holdup the rest of the queue to build more quickly.
<% if @allow_make_jobs_pkgs and @allow_make_jobs_pkgs != '' -%>
ALLOW_MAKE_JOBS_PACKAGES=<%= @allow_make_jobs_pkgs %>
<% end -%>

# Timestamp every line of build logs
# Default: no
<% if @timestamp_logs and @timestamp_logs != '' -%>
TIMESTAMP_LOGS=<%= @timestamp_logs %>
<% end -%>

# Define as the URL that your POUDRIERE_DATA/logs is hosted at
# This will be used for giving URL hints to the HTML output when
# scheduling and starting builds
#URL_BASE=http://yourdomain.com/poudriere/
<% if @url_base and @url_base != '' -%>
URL_BASE=<%= @url_base %>
<% end -%>

# This defines the max time (in seconds) that a command may run for a build
# before it is killed for taking too long. Default: 86400
#MAX_EXECUTION_TIME=86400
<% if @max_execution_time and @max_execution_time != '' -%>
MAX_EXECUTION_TIME=<%= @max_execution_time %>
<% end -%>

# This defines the how long (in seconds) before a command is considered to
# be in a runaway state for having no output on stdout. Default: 7200
#NOHANG_TIME=7200
<% if @nohang_time and @nohang_time != '' -%>
NOHANG_TIME=<%= @nohang_time %>
<% end -%>

# The repository is updated atomically if set yes. This leaves the
# repository untouched until the build completes. This involves using
# hardlinks and symlinks. The operations are fast, but can be intrusive
# for remote syncing or backups.
# Recommended to always keep on.
# Default: yes
<% if @atomic_pkg_repo and @atomic_pkg_repo != '' -%>
ATOMIC_PACKAGE_REPOSITORY=<%= @atomic_pkg_repo %>
<% end -%>

# When using ATOMIC_PACKAGE_REPOSITORY, commit the packages if some
# packages fail to build. Ignored ports are considered successful.
# This can be set to 'no' to only commit the packages once no failures
# are encountered.
# Default: yes
<% if @commit_pkgs_on_failure and @commit_pkgs_on_failure != '' -%>
COMMIT_PACKAGES_ON_FAILURE=<%= @commit_pkgs_on_failure %>
<% end -%>

# Keep older package repositories. This can be used to rollback a system
# or to bisect issues by changing the repository to one of the older
# versions and reinstalling everything with `pkg upgrade -f`
# ATOMIC_PACKAGE_REPOSITORY is required for this.
# Default: no
<% if @keep_old_pkgs and @keep_old_pkgs != '' -%>
KEEP_OLD_PACKAGES=<%= @keep_old_pkgs %>
<% end -%>

# How many old package repositories to keep with KEEP_OLD_PACKAGES
# Default: 5
<% if @keep_old_pkgs_count and @keep_old_pkgs_count != '' -%>
KEEP_OLD_PACKAGES_COUNT=<%= @keep_old_pkgs_count %>
<% end -%>

# Make testing errors fatal.
# If set to 'no', ports with test failure will be marked as failed but still
# packaged to permit testing dependent ports (useful for bulk -t -a)
# Default: yes
<% if @porttesting_fatal and @porttesting_fatal != '' -%>
PORTTESTING_FATAL=<%= @porttesting_fatal %>
<% end -%>

# Define the building jail hostname to be used when building the packages
# Some port/packages hardcode the hostname of the host during build time
# This is a necessary setup for reproducible builds.
<% if @builder_hostname and @builder_hostname != '' -%>
BUILDER_HOSTNAME=<%= @builder_hostname %>
<% end -%>

# Define to get a predictable timestamp on the ports tree
# This is a necessary setup for reproducible builds.
<% if @preserve_timestamp and @preserve_timestamp != '' -%>
PRESERVE_TIMESTAMP=<%= @preserve_timestamp %>
<% end -%>

# Define to yes to build and stage as a regular user
# Default: no
<% if @build_as_non_root and @build_as_non_root != '' -%>
BUILD_AS_NON_ROOT=<%= @build_as_non_root %>
<% end -%>

# Define pkgname globs to boost priority for
# Default: none
<% if @priority_boost and @priority_boost != '' -%>
PRIORITY_BOOST=<%= @priority_boost %>
<% end -%>

# Define format for buildnames
# Default: %Y-%m-%d_%Hh%Mm%Ss
# ISO8601:
<% if @buildname_format and @buildname_format != '' -%>
BUILDNAME_FORMAT=<%= @buildname_format %>
<% end -%>

# Define format for build duration times
# Default: %H:%M:%S
<% if @duration_format and @duration_format != '' -%>
DURATION_FORMAT=<%= @duration_format %>
<% end -%>

# Use colors when in a TTY
# Default: yes
<% if @use_colors and @use_colors != '' -%>
USE_COLORS=<%= @use_colors %>
<% end -%>

# Only build what is requested. Do not rebuild build deps if nothing requested
# depends on them. This can create an inconsistent repository if you often
# build one-off packages but expect the repository to stay consistent.
# Defaut: yes
<% if @trim_orphaned_build_deps and @trim_orphaned_build_deps != '' -%>
TRIM_ORPHANED_BUILD_DEPS=<%= @trim_orphaned_build_deps %>
<% end -%>
